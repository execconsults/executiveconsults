<% layout('./layouts/boilerplate.ejs')%>



<div class="relative ml-4 mr-4 overflow-x-auto shadow-md sm:rounded-lg">
    <div class="mb-28"></div>

    <table class="w-full text-sm text-left rtl:text-right text-gray-500">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 ">
            <tr>
                <th scope="col" class="px-6 py-3">
                     Name
                </th>
                <th scope="col" class="px-6 py-3">
                    Email
                </th>
                <th scope="col" class="px-6 py-3">
                    Category
                </th>
                <th scope="col" class="px-6 py-3">
                    Company
                </th>
                <th scope="col" class="px-6 py-3">
                    Phone
                </th>
                <th scope="col" class="px-6 py-3">
                    Price
                </th>
                <th scope="col" class="px-6 py-3">
                    Open
                </th>
            </tr>
        </thead>
        <tbody>
            <% for(let appoiment of appoiments){ %>
                
                <tr class="odd:bg-white  even:bg-gray-50 border-b ">
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">
                        <%=appoiment.name%>
                    </th>
                    <td class="px-6 py-4">
                        <%=appoiment.email%>
                    </td>
                    <td class="px-6 py-4">
                        <%=appoiment.type%>
                    </td>
                    <td class="px-6 py-4">
                        <%=appoiment.company%>
                    </td>
                    <td class="px-6 py-4">
                        <%=appoiment.tel%>
                    </td>
                    <td class="px-6 py-4">
                        <%=appoiment.balance%>
                    </td>
                    <td class="px-6 py-4">
                        <button data-modal-target="<%=appoiment._id %>appt" data-modal-toggle="<%=appoiment._id %>appt"  type="button" class="focus:outline-none text-white bg-yellow-500 hover:bg-yellow-600  font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 ">Open</button>

                    </td>
                </tr>

                <!-- Main modal -->
<div id="<%=appoiment._id %>appt" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full" style="z-index: 9999999;">
    <div class="relative p-4 w-full max-w-2xl max-h-full">
        <!-- Modal content -->
        <div class="relative bg-white rounded-lg shadow ">
            <!-- Modal header -->
            <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t ">
                <h3 class="text-xl font-semibold text-gray-900 ">
                    <%=appoiment.name%>.com
                </h3>
                <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center" data-modal-hide="<%=appoiment._id %>appt">
                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                    </svg>
                    <span class="sr-only">Close modal</span>
                </button>
            </div>
            <!-- Modal body -->
            <div class="p-4 md:p-5 space-y-4">

                <p class="text-base leading-relaxed text-gray-500">
                        <h2 class="text-2xl font-semibold mb-4"><%= appoiment.name %></h2>
                    <div class="flex justify-between flex-wrap">
                        <div class="mb-4">
                            <span class="text-gray-600">Email:</span>
                            <span class="text-gray-800 font-semibold"><%= appoiment.email %></span>
                        </div>
    
                        <div class="mb-4">
                            <span class="text-gray-600">Tel:</span>
                            <span class="text-gray-800 font-semibold"><%= appoiment.tel %></span>
                        </div>
    
                        <div class="mb-4">
                            <span class="text-gray-600">Company:</span>
                            <span class="text-gray-800 font-semibold"><%= appoiment.company %></span>
                        </div>
                        <div class="mb-4">
                            <span class="text-gray-600">Company:</span>
                            <span class="text-gray-800 font-semibold"><%= appoiment.company %></span>
                        </div>


                        <div class="mb-4">
                            <span class="text-gray-600">Type:</span>
                            <span class="text-gray-800 font-semibold"><%= appoiment.type %></span>
                        </div>
                        <div class="mb-4">
                            <span class="text-gray-600">Category:</span>
                            <span class="text-gray-800 font-semibold"><%= appoiment.category %></span>
                        </div>
                        
                    </div>
                        <!-- Plan Details Card -->
                        <div class="border-t mt-6 pt-4">
                            <h3 class="text-xl font-semibold mb-2">Hosting Details:</h3>
                            <div class="bg-blue-100 p-4 rounded-md mb-2">
                                <p class="text-sm text-blue-800"><%= appoiment.planData.instanceType %></p>
                                <p class="text-sm text-blue-800"><%= appoiment.planData.ram %></p>
                                <p class="text-sm text-blue-800"><%= appoiment.planData.cpu %></p>
                                <p class="text-sm text-blue-800"><%= appoiment.planData.price %></p>
                            </div>
                                <div class="p-2 rounded bg-gray-100">
                    <%=appoiment.message%> 
                </div>
                </p>
            
            </div>
            <!-- Modal footer -->
            <div class="flex items-center p-4 md:p-5 border-t border-gray-200 rounded-b dark:border-gray-600">
                <!-- <button data-modal-hide="<%=appoiment._id %>appt" type="button" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center ">I accept</button> -->
                <button data-modal-hide="<%=appoiment._id %>appt" type="button" class="ms-3 text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-blue-300 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900 focus:z-10 ">Close</button>
            </div>
        </div>
    </div>
</div>
                <% } %>

    
       
        </tbody>
    </table>

</div>
<br>

